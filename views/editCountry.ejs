<h1>Edit Country</h1>

<div>
    <button onclick="location.href='/listCountries'" type="button">Back</button>
</div>
<br></br>

<!-- ejs text to handle the errors -->
<% if (errors !=undefined) { %>
    <ul>
            <% errors.forEach((error)=> { %>
                    <li>
                            <%= error.msg %>
                    </li>
                    <% }) %>
    </ul>
    <% } %>

<% countries.forEach((country)=>{ %>

    

    <!-- form to edit the country -->
    <form action="/updateCountry" method="POST">
        <div>
            <label>Country Code</label>
            <input type='text' value="<%= country.co_code %>" name="coCode">
        </input>
        </div>
        <div>
            <label>Country Name</label>
            <input type='text' value="<%= country.co_name %>" name="coName">
        </input>
        </div>
    <div>
        <label>Country Details</label>
        <input type='text' value=" <%=country.co_details %>" name="coDetails">
            </input>
        </div>
        <br></br>
        <input onclick="location.href='/updateCountry'" type="submit" value="Update">
    </form>
    <% }) %>

    <br></br>

    <button onclick="location.href='/'" type="button">Home</button>