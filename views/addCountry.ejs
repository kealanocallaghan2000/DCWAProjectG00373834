<html>

<body>

<h1>Add Country</h1>

<!-- ejs text to handle the errors -->
<% if (errors !=undefined) { %>
        <ul>
                <% errors.forEach((error)=> { %>
                        <li>
                                <%= error.msg %>
                        </li>
                        <% }) %>
        </ul>
        <% } %>

                <!-- form for adding a country -->
                <form action="/add" method="POST">
                        <label>Country Code</label>
                        <input type='text' name="coCode">
                        </input>
                        <br></br>
                        <label>Country Name</label>
                        <input type='text' name="coName">
                        </input>
                        <br></br>
                        <label>Country Details</label>
                        <input type='text' name="coDetails">
                        </input>
                        <br></br>
                        <input onclick="location.href='/add'" type="Submit" value="Add">
                </form>

                <br></br>

                <!-- home button -->
                <button onclick="location.href='/'" type="button">Home</button>

</body>

</html>